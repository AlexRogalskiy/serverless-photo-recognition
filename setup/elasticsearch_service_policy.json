{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::ACCOUNT_ID_REPLACE_ME:role/s3-to-es"
      },
      "Action": "es:*",
      "Resource": "ELASTICSEARCH_DOMAIN_ARN_REPLACE_ME/*"
    },
    {
      "Sid": "",
      "Effect": "Allow",
      "Principal": {
        "AWS": "*"
      },
      "Action": "es:*",
      "Resource": "ELASTICSEARCH_DOMAIN_ARN_REPLACE_ME/*",
      "Condition": {
        "IpAddress": {
          "aws:SourceIp": "YOUR_EXTERNAL_IP_ADDRESS_REPLACE_ME"
        }
      }
    }
  ]
}